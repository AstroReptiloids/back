{
  "name": "microchats",
  "version": "1.0.0",
  "description": "",
  "main": "src/server.js",
  "engines": {
    "node": ">=8.0.0",
    "npm": ">=3.8"
  },
  "scripts": {
    "start": "node dist/server.js",
    "build": "rimraf dist && cross-env NODE_ENV=production babel src -d dist -s",
    "dev": "nodemon src/server.js",
    "seed": "rimraf out && mkdir out && babel-node src/seed.js"
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-plugin-source-map-support": "^2.1.1",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-preset-env": "^1.7.0",
    "cross-env": "^7.0.2",
    "nodemon": "^2.0.4",
    "rimraf": "^3.0.2"
  },
  "dependencies": {
    "@koa/cors": "^3.1.0",
    "koa": "^2.12.0",
    "koa-bodyparser": "^4.3.0",
    "koa-logger": "^3.2.1",
    "koa-qs": "^3.0.0",
    "koa-router": "^9.0.1",
    "pg": "^8.2.1",
    "pg-hstore": "^2.3.3",
    "sequelize": "^5.21.12",
    "sqlite3": "^4.2.0",
    "uuid": "^8.1.0",
    "yenv": "^2.1.1"
  },
  "nodemonConfig":  {
    "execMap": {
      "js": "babel-node"
    }
  },
  "babel": {
    "sourceMaps": "both",
    "plugins": [
      "transform-runtime",
      "transform-object-rest-spread"
    ],
    "presets": [
      [
        "env",
        {
          "targets": {
            "node": "current"
          }
        }
      ]
    ],
    "env": {
      "production": {
        "plugins": [
          "source-map-support"
        ],
        "ignore": [
          "**/__tests__/**"
        ]
      }
    }
  }
}
